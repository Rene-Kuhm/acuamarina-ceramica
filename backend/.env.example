# Configuración del servidor
NODE_ENV=production
PORT=3000
API_VERSION=v1

# Base de datos PostgreSQL
# Para Vercel, usa DATABASE_URL en lugar de las variables individuales
DATABASE_URL=postgresql://user:password@host:5432/database

# Alternativa: Variables individuales (para desarrollo local)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=aguamarina_mosaicos
DB_USER=postgres
DB_PASSWORD=your_password_here
DB_SSL=true
DB_MAX_CONNECTIONS=5

# Seguridad JWT
JWT_SECRET=your_super_secret_jwt_key_change_in_production
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your_refresh_token_secret
JWT_REFRESH_EXPIRES_IN=30d

# Cloudinary (para imágenes)
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# MercadoPago (para pagos)
MERCADOPAGO_ACCESS_TOKEN=your_mercadopago_access_token
MERCADOPAGO_PUBLIC_KEY=your_mercadopago_public_key

# Configuración CORS (para producción usar URLs de producción)
CORS_ORIGIN=https://your-frontend.vercel.app,https://your-admin.vercel.app
CORS_CREDENTIALS=true

# Valkey (opcional - para caching en producción)
# Railway proporciona automáticamente REDIS_URL que también funciona con Valkey
REDIS_URL=redis://default:password@host:6379
VALKEY_HOST=localhost
VALKEY_PORT=6379
VALKEY_PASSWORD=
VALKEY_DB=0

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Upload limits
MAX_FILE_SIZE=5242880
ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/webp

# Email - Para formulario de contacto
# Opción 1: Usar Zoho Mail (configurado para aguamarinamosaicos.com)
EMAIL_SERVICE=zoho
EMAIL_USER=contacto@aguamarinamosaicos.com
EMAIL_PASSWORD=tu_password_de_zoho

# Opción 2: Usar Gmail
# EMAIL_SERVICE=gmail
# EMAIL_USER=tu_email@gmail.com
# EMAIL_PASSWORD=tu_app_password_de_gmail

# Opción 3: Usar SMTP genérico
# EMAIL_SERVICE=smtp
# SMTP_HOST=smtp.tuproveedor.com
# SMTP_PORT=465
# SMTP_SECURE=true

# Configuración SMTP de Zoho Mail:
# Host: smtp.zoho.com
# Puerto: 587 (STARTTLS) - Recomendado para Railway y plataformas cloud
# Puerto alternativo: 465 (SSL) - Puede estar bloqueado en algunos proveedores
# Seguridad: STARTTLS habilitado

# Frontend URL (para links en emails)
FRONTEND_URL=https://acuamarina-ceramica.vercel.app
